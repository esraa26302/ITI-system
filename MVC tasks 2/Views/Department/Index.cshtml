@model IEnumerable<Department>
@{
    ViewBag.Title = "department data";
}


    <div class="container mt-5">
        <table class="table table-bordered table-hover" style="background-color: #fff5f7;">
            <thead class="thead-dark">
                <tr>
                    <th style="color: #c71585">Department ID</th>
                    <th style="color: #c71585">Department Name</th>
                    
    
                    <th style="color: #c71585">Operation</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="background-color: #f8bbd0;">
                        <td class="text-white">@item.DeptId</td>
                        <td class="text-white">@item.DeptName</td>
                        <td>
                            <div class="link-container">
                                <a asp-action="ShowCourses" asp-controller="departmentCourse" asp-route-id="@item.DeptId">Show Courses</a>
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="MangeCourses" asp-controller="departmentCourse" asp-route-id="@item.DeptId">Manage Courses</a>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="#" class="btn btn-danger delete-department-link" data-deptid="@item.DeptId">Delete</a>
                                </div>}
                            </div>
                           
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    @if (User.IsInRole("Admin"))
    {


        <div class="link-container">
            <a href="/department/create">Add Department</a>
        </div>
    }
        </div>
         @if (User.IsInRole("Admin"))
{
    <div class="modal fade" id="deleteConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="deleteConfirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteConfirmationModalLabel">Delete Department</h5>
                  
                </div>
                <div class="modal-body">
                    Are you sure you want to delete this department?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                    <a id="deleteDepartmentLink" href="#" class="btn btn-danger">Delete</a>
                </div>
            </div>
        </div>
    </div>
    }

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
<script src="/js/myjs.js"></script>

